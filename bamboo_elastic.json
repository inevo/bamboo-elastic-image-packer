{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "aws_region": "us-east-1",
    "aws_ami": "ami-e894719f"
    },

  "builders": [
    {
        "name": "aws",
        "type": "amazon-ebs",
        "access_key": "{{user `aws_access_key`}}",
        "secret_key": "{{user `aws_secret_key`}}",
        "region": "{{user `aws_region`}}",
        "source_ami": "{{user `aws_ami`}}",
        "instance_type": "t1.micro",
        "ssh_username": "ubuntu",
        "ami_name": "Bamboo Elastic Image {{timestamp}}"
    }
    ],

    "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "scripts/update.sh",
        "scripts/bamboo_agent.sh"
      ],
      "execute_command": "{{ .Vars }} sudo -E sh '{{ .Path }}'"
    },
    {
      "type": "chef-solo",
      "install_command": "curl -L https://www.opscode.com/chef/install.sh | {{if .Sudo}}sudo{{end}} bash -s -- -v 10.28.0",
      "cookbook_paths": ["cookbooks", "site-cookbooks"],
      "run_list": [
        "git",
        "java",
        "maven",
        "nodejs",
        "grunt",
        "bower"
      ],
      "json": {
        "java": {
            "install_flavor": "openjdk",
            "jdk_version": "7",
            "arch": "x86_64",
            "oracle": { "accept_oracle_download_terms": true}
        },
        "maven": {
            "m2_home": "/opt/maven-3.0"
        },
        "nodejs": {
            "install_method": "binary",
            "version": "0.10.18",
            "dir": "/opt/node-0.10",
            "check_sha": false
        }
      }
    }
  ]
}